{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./node_modules/.cache/dist",
    "tsBuildInfoFile": "./node_modules/.cache/.tsbuildinfo",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "paths": {
      "api/*": [
        "./*"
      ],
      "web-app/*": [
        "..\\web-app/src/*"
      ]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.js",
    "./**/*.json",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.js",
    "./src/**/*.json",
    "src/**/*"
  ],
  "references": [
    {
      "path": "..\\web-app"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
