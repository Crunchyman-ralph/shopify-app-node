{
  "compileOnSave": false,
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "checkJs": true,
    "sourceMap": true,
    "declaration": true,
    "noEmit": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,

    "isolatedModules": true,
    "incremental": true,
    "declarationMap": true,

    "types": ["vitest/globals", "node"]
  },
  "exclude": ["**/.yarn", "**/node_modules", "**/dist", "**/jest.*.js"]
}
