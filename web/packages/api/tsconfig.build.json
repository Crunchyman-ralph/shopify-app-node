{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "types": ["node"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "target": "es6"
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "**/__tests__", "**/node_modules"],
  "include": ["src/**/*.ts"]
}
