{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "packageManager": "yarn@3.2.0",
  "license": "UNLICENSED",
  "main": "src/index",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:client": "vite build --outDir dist/client",
    "build:server": "tsc -p tsconfig.build.json",
    "debug": "node --inspect-brk server/index.js",
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts --ignore ${PROJECT_CWD}/web/frontend",
    "prepare": "husky install",
    "preserve": "npm run build",
    "serve": "cross-env NODE_ENV=production node dist/src/index.js",
    "start": "yarn serve",
    "test": "vitest --reporter=verbose"
  },
  "dependencies": {
    "@shopify/shopify-api": "5.0.1",
    "@vitejs/plugin-react": "2.0.1",
    "compression": "1.7.4",
    "cookie-parser": "1.4.6",
    "cross-env": "7.0.3",
    "dotenv": "16.0.1",
    "express": "4.18.1",
    "serve-static": "1.15.0"
  },
  "devDependencies": {
    "@types/compression": "1.7.2",
    "@types/cookie-parser": "1.4.3",
    "@types/express": "4.17.13",
    "@types/node": "18.7.8",
    "husky": "8.0.1",
    "jsonwebtoken": "8.5.1",
    "nodemon": "2.0.19",
    "prettier": "2.7.1",
    "pretty-quick": "3.1.3",
    "supertest": "6.2.4",
    "ts-node": "10.9.1",
    "typescript": "4.7.4",
    "vitest": "0.22.1"
  },
  "type": "commonjs"
}
