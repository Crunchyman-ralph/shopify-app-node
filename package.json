{
  "name": "shopify-app-node",
  "private": true,
  "packageManager": "yarn@3.2.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspace api build",
    "c:format": "prettier -w $INIT_CWD",
    "c:lint": "eslint $INIT_CWD --cache --cache-location node_modules/.cache/.eslintcache --fix",
    "c:lint:ci": "eslint $INIT_CWD",
    "c:pkg:deps": "syncpack syncpack lint-semver-ranges",
    "c:pkg:deps:fix": "syncpack fix-mismatches",
    "c:pkg:fix": "yarn c:pkg:deps:fix && yarn c:pkg:format",
    "c:pkg:format": "syncpack format",
    "c:test": "sh -c \"if [ $INIT_CWD = $PROJECT_CWD ]; then yarn test ${0:-}; else vitest --dir $INIT_CWD --config $INIT_CWD/vite*.config.ts --run --passWithNoTests ${0:-}; fi\"",
    "c:test:ci": "cd $INIT_CWD && yarn c:test",
    "c:test:watch": "cd $INIT_CWD && yarn c:test -w",
    "c:type": "cd $INIT_CWD && tsc -b",
    "gen:tsconfig": "cross-env yarn node scripts/generators/tsconfig.mjs",
    "start": "yarn workspace api start",
    "test": "yarn workspaces foreach -v --exclude 'bloup' run c:test ${0:-}"
  },
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@shopify/app-bridge": "^2.0.22",
    "@shopify/app-bridge-react": "^2.0.26",
    "@shopify/app-bridge-utils": "^2.0.26",
    "@shopify/polaris": "^9.2.2",
    "@shopify/shopify-api": "^3.0.0",
    "@vitejs/plugin-react": "1.3.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "graphql": "^16.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "serve-static": "^1.14.1",
    "vite": "^2.9.8"
  },
  "devDependencies": {
    "@babel/core": "7.17.9",
    "@babel/eslint-parser": "7.17.0",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-typescript": "7.16.7",
    "@graphql-eslint/eslint-plugin": "3.10.2",
    "@types/glob": "7.2.0",
    "@types/node": "^17.0.40",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.4.0",
    "eslint-plugin-unicorn": "42.0.0",
    "glob": "7.2.0",
    "husky": "^7.0.4",
    "jsdom": "19.0.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "supertest": "^6.2.3",
    "syncpack": "6.2.0",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.0.0",
    "tslib": "2.3.1",
    "typescript": "^4.6.4",
    "vitest": "^0.10.5"
  },
  "engines": {
    "node": ">=16.13.0"
  }
}
